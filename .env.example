# ==========================================
# GENERAL CONFIGURATION
# ==========================================
DOMAINNAME=example.com
TIMEZONE=America/New_York
PUID=1000
PGID=1000

# Directory where your NAS/HDD is mounted
MEDIA_PATH=/mnt/media

# ==========================================
# IDENTITY & SECURITY (Authentik)
# ==========================================
# Generate using: openssl rand -base64 32
AUTHENTIK_SECRET_KEY=generate_secure_random_key_here

# ==========================================
# DATABASE CREDENTIALS (Postgres)
# ==========================================
PG_USER=authentik
PG_PASS=secure_database_password
PG_DB=authentik

# ==========================================
# API KEYS & SECRETS
# ==========================================
# The Movie Database API Key (for Bitmagnet/Metadata)
TMDB_API_KEY=your_tmdb_api_key_here

# Plex Claim Token (https://www.plex.tv/claim)
PLEX_CLAIM=claim-xxxxxxxxxxxxxxxxx

# Scrypted Webhook Secret for NVR Auth
SCRYPTED_SECRET=random_generated_secret_string

# AIOStreams Secret Key (for session encryption)
AIOSTREAMS_SECRET=random_hex_string_64_chars
